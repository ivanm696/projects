name: ci
on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]
jobs:
  build-test:
    runs-on: ubuntu-latest
    services:
      postgres:
        image: postgres:16
        env:
          POSTGRES_PASSWORD: postgres
        ports: ["5432:5432"]
      redis:
        image: redis:7
        ports: ["6379:6379"]
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-python@v5
        with: { python-version: '3.11' }
      - uses: actions/setup-node@v4
        with: { node-version: '20' }
      - name: Backend deps
        run: |
          pip install -r apps/api/requirements.txt
      - name: Frontend deps
        run: |
          cd apps/frontend && npm ci && npm run build
      - name: Tests
        run: |
          pytest -q
  build-image:
    needs: build-test
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Packer validate
        uses: hashicorp/packer-github-actions@v0.0.10
        with:
          command: validate
          arguments: -syntax-only infra/packer
      - name: Packer build
        uses: hashicorp/packer-github-actions@v0.0.10
        with:
          command: build
          arguments: -color=false -
